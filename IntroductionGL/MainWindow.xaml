<!-- Интерфейс главного окна -->
<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="IntroductionGL.MainWindow"
        
        WindowStartupLocation="CenterScreen"
                
        Title="PaintLines"
        Height="150" Width="240"
        MinHeight="150" MinWidth="240"
        MaxHeight="150" MaxWidth="240"

    
        FontFamily="Times New Roman" 
        FontWeight="Bold" FontSize="14">

    <Grid>

        <!--#region  % ***** Кнопочки ***** % -->
        <UniformGrid Rows="1" Columns="2">
            <Button x:Name="Button2D"
                    Click="Button2D_Click"
                    Canvas.Left="2"
                    Canvas.Right="2"
                    Canvas.Bottom="2"
                    Canvas.Top="2"
                    Content="2D" Margin="10,10,10,10"/>

            <Button x:Name="Button3D"
                    Click="Button3D_Click"
                    Canvas.Left="2"
                    Canvas.Right="2"
                    Canvas.Bottom="2"
                    Canvas.Top="2"
                    Content="3D" Margin="10,10,10,10"/>
        </UniformGrid>
        <!--#endregion-->
        
    </Grid>
</Window>
